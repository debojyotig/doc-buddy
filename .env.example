# Datadog Configuration
DD_SITE=datadoghq.com

# Option A: OAuth Authentication (Recommended - requires OAuth Apps access)
DD_OAUTH_CLIENT_ID=your-oauth-client-id
DD_OAUTH_REDIRECT_URI=http://localhost:60080/callback

# Option B: API Key Authentication (Fallback - if OAuth not available)
# If these are set, OAuth will be skipped automatically
DD_API_KEY=your-api-key-here
DD_APP_KEY=your-app-key-here

# LLM Provider Configuration

# Option 1: Anthropic Claude
ANTHROPIC_API_KEY=your-api-key
ANTHROPIC_OAUTH_CLIENT_ID=your-client-id
ANTHROPIC_OAUTH_CLIENT_SECRET=your-client-secret

# Option 2: OpenAI
OPENAI_API_KEY=your-api-key
OPENAI_OAUTH_CLIENT_ID=your-client-id
OPENAI_OAUTH_CLIENT_SECRET=your-client-secret

# Option 3: Azure OpenAI (Generic - works with any Azure OpenAI gateway)
# Required configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_AUTH_URL=https://login.microsoftonline.com/YOUR_TENANT_ID/oauth2/v2.0/token
AZURE_ENDPOINT=https://YOUR_RESOURCE_NAME.openai.azure.com/openai/deployments/YOUR_DEPLOYMENT_NAME
AZURE_SCOPE=https://cognitiveservices.azure.com/.default

# Optional Azure Configuration
AZURE_PROJECT_ID=your-project-id  # Optional: Include if your gateway requires a project ID
AZURE_DEPLOYMENT_NAME=gpt-4  # Deployment name
AZURE_MODEL=gpt-4  # Model name
AZURE_API_VERSION=2024-02-01  # API version
AZURE_UPSTREAM_ENV=prod  # Optional: Custom environment header (e.g., 'stg', 'prod')

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Optional: Error Tracking
SENTRY_DSN=your-sentry-dsn

# Optional: Analytics
ANALYTICS_ENABLED=false
